<?xml version="1.0"?>
<launch>
    <!-- config file path  -->
    <arg name="rviz_settings" default="$(find scan_to_pcl_ros)/config/test.rviz"/>

    <!-- node launch -->
    <node pkg="scan_to_pcl_ros" type="scan_to_pcl_node" name="scan_to_pcl_node" output="screen">
        <!-- <remap from="/scan" to="/<robot_name>/scan"/> -->
    </node>
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(arg rviz_settings)"/>
</launch>
